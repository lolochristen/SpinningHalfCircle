<Window x:Class="SpinningHalfCircle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpinningHalfCircle"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="1100" Width="1100" Background="Black">
    <Grid>
        <Grid x:Name="container" />
        <Slider VerticalAlignment="Bottom" Height="30" Minimum="0.01" Maximum="10" Value="1" x:Name="Speed"></Slider>
    </Grid>
</Window>
